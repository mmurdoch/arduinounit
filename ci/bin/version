#!/bin/bash

version() {
    if [ "$VERSION" != "" ]
    then
        echo $VERSION
        return
    fi

    while [ $# -gt 0 ]
    do
        case "$1"
        in
            --version=*) local VERSION="${1#--version=}"; shift;;
            --*=*)       shift;;
            --)          shift; break;;
            *)           break;;
        esac
    done

    if [ "$VERSION" = "" ]
    then
        local VERSION="1.8.9"
    fi
    echo $VERSION
}

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]
then
    version "$@"
fi
